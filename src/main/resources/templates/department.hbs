{{#partial "content"}}

    <h1>All Departments</h1>
    <h2><a href="/departments/new"> add Department</a></h2>
    <br>
    <br>
    <table class="table">
        <tr>
            <th scope="col">Department Name</th>
            <th scope="col">Description</th>
            <th scope="col">Number of employees</th>


        </tr>
        {{#each departments}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{no_ofemployees}}</td>

            </tr>
        {{/each}}
    </table>

{{/partial}}

